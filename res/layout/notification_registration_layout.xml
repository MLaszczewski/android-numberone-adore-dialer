<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accounts_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell1"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/iconContainer1"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:background="@drawable/notify_panel_notification_icon_bg_tile"
            android:orientation="vertical"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_phone"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="fitXY"
                android:src="@drawable/ic_indicator_on" 
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/account_label1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer1"
            android:ellipsize="end"
            android:paddingLeft="14dip"
            android:text="@string/app_name"
            android:textAppearance="@style/NotificationTitle" >
        </TextView>
    </RelativeLayout>
    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell2"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/iconContainer2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="fitXY"
                android:src="@drawable/ic_indicator_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/account_label2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer2"
            android:ellipsize="end"
            android:paddingLeft="14dip"
            android:textAppearance="@style/NotificationTitle" >
        </TextView>
    </RelativeLayout>
    <!-- Unfortunately to be compatible with 1.6 devices, we need to write it as flat file -->

    <RelativeLayout
        android:id="@+id/cell3"
        style="@style/list_left_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/iconContainer3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="4dip"
            android:paddingLeft="8dip"
            android:paddingRight="8dip" >

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:contentDescription="@string/acct_registered" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/acct_registered"
                android:scaleType="fitXY"
                android:src="@drawable/ic_indicator_on" />
        </LinearLayout>

        <TextView
            android:id="@+id/account_label3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iconContainer3"
            android:ellipsize="end"
            android:paddingLeft="14dip"
            android:textAppearance="@style/NotificationTitle" >
        </TextView>
    </RelativeLayout>
    <!-- TODO : add a more label -->

</LinearLayout>