   <ImageView
    android:id="@+id/line"
     android:layout_alignParentTop="@+id/refl_vchr"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#aa000000"
    android:layout_marginTop="50dp"
     android:visibility="gone"
     /> -->

           <TextView
               android:id="@+id/refl_vchr"
               android:layout_width="fill_parent"
               android:layout_height="70dp"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/paypal"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:layout_centerVertical="true"
               android:layout_marginTop="20dp"
               android:background="@drawable/recharge"
               android:gravity="center|center_horizontal"
               android:onClick="onClick"
               android:visibility="gone" 
              android:paddingLeft="100dp"
               android:textColor="#000000"
               android:textSize="25sp" />

           <TextView
               android:id="@+id/paypal"
               android:layout_width="fill_parent"
                android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:layout_height="70dp"
              android:gravity="center"
               android:layout_marginTop="116dp" 
               android:text="Mobile Message"
               android:textColor="#fff"
               android:background="#961515"
               android:textSize="23sp"
               android:onClick="onClick" />

           <ImageButton
               android:id="@+id/skip"
               android:layout_width="wrap_content"
               android:layout_height="70dp"
               android:layout_below="@+id/refl_vchr"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="36dp"
               android:background="@drawable/skip" />
    
</RelativeLayout>    

</ScrollView>