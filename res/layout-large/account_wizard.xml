<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_layout"
    android:layout_width="fill_parent"
    android:background="#fff"
    
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:src="@drawable/adore22" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dip"
            android:text=""
            android:visibility="gone" 
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />

        <EditText
            android:id="@+id/acc_sip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:autoText="false"
            android:hint="@string/hint_sip"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#959595"
            android:visibility="gone" />

        <EditText
            android:id="@+id/acc_proxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:hint="@string/hint_proxy"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#959595"
            android:visibility="gone" />

        <EditText
            android:id="@+id/acc_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:autoText="false"
            android:hint="Enter Username"
            android:paddingLeft="70dp"
            android:lines="1"
            android:maxLength="15"
             android:layout_marginLeft="25dp"
                 android:layout_marginRight="25dp"
            android:maxLines="1"
            android:background="@drawable/user_bar"
          
            android:singleLine="true"
            android:textColor="#026D95"
            android:textColorHint="#959595"
            android:textCursorDrawable="@drawable/cursor"
            android:visibility="gone" /> 

        <Button
            android:id="@+id/acc_signup"
            android:layout_width="fill_parent"
             android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.24"
            android:background="@drawable/login_img"
            android:onClick="onClick"
            android:text="Request Password"
            android:textSize="25sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/acc_pass"
            android:layout_width="match_parent"
             android:layout_height="50dp"
            android:layout_marginLeft="25dp"
                 android:layout_marginRight="25dp"
           android:layout_marginTop="15dp"
              android:background="@drawable/password_bar"
               android:maxLength="15"
            android:autoText="false"
            android:hint="Enter Password"
            android:lines="1"
            android:maxLines="1"
             android:paddingLeft="70dp"
            android:password="true"
            android:singleLine="true"
           android:textColor="#026D95"
           android:textColorHint="#959595"
            android:textCursorDrawable="@drawable/cursor"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/acc_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.24"
                android:text="Login"
                android:background="@drawable/login_img"
                android:onClick="onClick"
               
                android:textSize="25sp"
                android:visibility="gone" />

            <Button 
                android:id="@+id/acc_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                   android:layout_marginLeft="28dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.24"
                android:text="Clear"
               android:background="@drawable/login_img"
                android:onClick="onClick"
             
              
                android:textSize="25sp"
                android:visibility="gone" />

           <EditText
                android:id="@+id/acc_Mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.24"
                android:autoText="false"
                android:ems="10"               
                  android:background="@drawable/bar"         
                     android:hint="Enter Mobile Number"    
                android:inputType="phone"
                android:lines="1"
                android:paddingLeft="40dp"
                android:maxLines="1"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="#026D95"
                android:textColorHint="#959595"
                android:textSize="18dip"
                  android:textCursorDrawable="@drawable/cursor" >
               
                <requestFocus />
            </EditText>

            

                
               
        </LinearLayout>
        
        
         <TextView 
            android:id="@+id/term"
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#33B5E5"
             style="@style/formWhiteBlock"
             android:visibility="gone"
             android:layout_marginTop="30dip"          
            android:textAppearance="?android:attr/textAppearanceSmall"
          
             />
         
           <CheckBox
              android:id="@+id/checkBox1"
              android:layout_width="wrap_content"
              android:layout_height="39dp"
              android:text="Accetto Termini e Condizioni." 
                 android:textColor="#000"    
                 android:checked="true"  
                 android:visibility="gone"
                android:layout_below="@id/term" 
                
             
                
              />
      

        <LinearLayout
            android:id="@+id/REGISTER_BUTTON_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
           
            android:orientation="horizontal" >

            <Button
                android:id="@+id/acc_Register"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/login_img"
                android:onClick="onClick"
                android:text="Sign up"
                android:textSize="25sp" />

            <Button
                android:id="@+id/acc_Mobclear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:layout_weight="0.24"
                 android:background="@drawable/login_img"
                android:text="Clear"
                android:onClick="onClick" 
              android:visibility="gone"
                android:textSize="25sp"/>
        </LinearLayout>
        
                <Button
          android:id="@+id/forget_button"
               android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                 android:layout_marginLeft="65dp"
                android:layout_marginTop="45dp"
                android:layout_weight="0.24"
               android:text="Forgot Password?"     
                android:textSize="25sp"        
              
                             
                 android:background="@drawable/login_img"
               android:textColor="#fff"             
                android:onClick="onClick"
                android:visibility="gone"
                  />
        
           <Button
                android:id="@+id/forgot"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:layout_weight="0.24"
                android:visibility="gone"
               
                android:background="@drawable/clear_img"
                android:onClick="onClick" />

           <Button
               android:id="@+id/Login_page"
               android:layout_width="350dp"
               android:layout_height="60dp"
               android:layout_marginLeft="135dp"
               android:layout_marginRight="20dp"
               android:layout_marginTop="300dp"
               android:background="@drawable/login_img"
               android:onClick="onClick"
               android:text="Already have a PIN"
               android:textSize="25sp" />

         <Button
                android:id="@+id/Register_page"
                 android:layout_width="250dp"
               android:layout_height="60dp"
                android:layout_marginLeft="55dp"
                 android:layout_marginRight="25dp"
                android:layout_marginTop="40dp"
                android:layout_weight="0.24"
               android:text="Register New User"
                android:background="@drawable/login_img"
                android:onClick="onClick"
               
                android:visibility="gone"
                android:textSize="25sp"
               />
    </LinearLayout>

</ScrollView>